{
  "name": "slack-opsgenie-bot",
  "private": true,
  "version": "1.5.0",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "DEBUG=* functions-framework --target=app",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "lint": "eslint . \"src/**/*.ts\"",
    "lint:fix": "eslint . \"src/**/*.ts\" --fix",
    "docker:build": "docker build -t slack-opsgenie-bot .",
    "docker:run": "bash scripts/yaml-to-env.sh && docker run --rm -p 8080:8080 -e DEBUG=* -e NODE_ENV=development --env-file .env slack-opsgenie-bot"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.4.3",
    "axios": "^1.7.9",
    "body-parser": "^2.0.2",
    "debug": "^4.4.0",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsscmp": "^1.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/body-parser": "^1.19.5",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@types/tsscmp": "^1.0.2",
    "eslint": "^8.57.1",
    "globals": "^15.13.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0"
  }
}
